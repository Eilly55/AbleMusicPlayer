<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#212121"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/player_bg"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/control_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/player_down_arrow"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:padding="20dp"
                    android:src="@drawable/down_arrow"/>

                <ImageView
                    android:id="@+id/player_queue"
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:padding="20dp"
                    android:layout_marginTop="4dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/playlist"/>

            </RelativeLayout>
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/main_player_stuff"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:ignore="UselessParent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/album_art"
                    android:layout_width="match_parent"
                    android:layout_height="280dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/rounded_rectangle">

                    <ImageView
                        android:layout_width="128dp"
                        android:layout_height="128dp"
                        android:src="@drawable/ic_music_note_black_24dp"
                        android:layout_centerInParent="true"
                        />

                </RelativeLayout>
                <LinearLayout
                    android:id="@+id/controls"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_marginHorizontal="30dp"
                        android:layout_marginTop="6dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <!--suppress AndroidUnknownAttribute -->
                        <TextView
                            android:id="@+id/song_name"
                            fontPath="fonts/interbold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="5dp"
                            android:maxLines="2"
                            android:text="Wake Up"
                            android:textColor="#fbfbfb"
                            android:textSize="18sp"
                            tools:ignore="MissingPrefix,RtlSymmetry" />

                        <!--suppress AndroidUnknownAttribute -->
                        <TextView
                            android:id="@+id/artist_name"
                            fontPath="fonts/interbold.otf"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="5dp"
                            android:paddingBottom="10dp"
                            android:text="Eden"
                            android:textColor="#80fbfbfb"
                            android:textSize="16sp"
                            tools:ignore="MissingPrefix" />
                    </LinearLayout>

                    <SeekBar
                        android:id="@+id/player_seekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="15.8dp"
                        android:progressBackgroundTint="@color/white"
                        android:backgroundTint="@color/white"
                        android:layout_marginTop="5dp"
                        android:secondaryProgressTint="@color/white"
                        android:indeterminateTint="@color/white"
                        android:foregroundTint="@color/white"
                        />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="26dp"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/player_current_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingStart="5dp"
                            android:text="0:00"
                            android:textColor="#80fbfbfb"
                            android:textSize="10sp"
                            tools:ignore="RtlSymmetry" />

                        <TextView
                            android:id="@+id/complete_position"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingEnd="5dp"
                            android:text="2:54"
                            android:layout_alignParentEnd="true"
                            android:textColor="#80fbfbfb"
                            android:textSize="10sp"
                            tools:ignore="RtlSymmetry" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="26dp"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/shuffle_button"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/shuffle"
                            android:paddingStart="4dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:id="@+id/previous_song"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/skip_previous"
                            android:layout_toStartOf="@+id/player_center_icon"
                            android:layout_marginEnd="35dp"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:id="@+id/player_center_icon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:src="@drawable/play"
                            android:layout_centerInParent="true"
                            />

                        <ImageView
                            android:id="@+id/next_song"
                            android:layout_width="26dp"
                            android:layout_height="26dp"
                            android:src="@drawable/skip_next"
                            android:layout_toEndOf="@+id/player_center_icon"
                            android:layout_marginStart="35dp"
                            android:layout_centerVertical="true"
                            />

                        <ImageView
                            android:id="@+id/repeat_button"
                            android:layout_width="23dp"
                            android:layout_height="23dp"
                            android:src="@drawable/repeat"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            />

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/cast"
            />

        <!--suppress AndroidUnknownAttribute -->
        <TextView
            fontPath="fonts/interbold.otf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingEnd="5dp"
            android:paddingStart="5dp"
            android:text="Cast"
            android:textColor="#80fbfbfb"
            android:textSize="15sp"
            tools:ignore="MissingPrefix" />

    </LinearLayout>

</RelativeLayout>